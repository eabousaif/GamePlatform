<%= form_for [current_player, @video_game] do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.label :rating %>:
  <%= f.text_field :rating %><br />

  <%= f.label :release_year %>:
  <%= f.text_field :release_year %><br />


  Genre: <%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: true) %><br />

  <%= f.submit "Submit" %>
<% end %>
