<%= stylesheet_link_tag 'application' %>

<h2>Add A Game to Your Play List</h2>

<%= form_for [current_player, @play_session] do |f| %>
  Select Game: <%= f.collection_select(:video_game_id, VideoGame.all, :id, :name, include_blank: "Select A Game") %><br />
  Average Play Time In Minutes: <%= f.text_field :duration %><br /><br />
<%= f.submit "Submit", class: "submit" %>
<% end %>


<br /><br />
